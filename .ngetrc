//example .ngetrc, copy to your ~/.nget4/ dir, and edit to your liking.

//global settings - (defaults, merely listed for your convenience)
tries=20
delay=1
case=0
complete=1
dupeidcheck=1
dupefilecheck=1
dupefilemark=0
limit=0
quiet=0
debug=0
tempshortnames=0
curservmult=2.0
makedirs=no
usegz=-1
timeout=180
unequal_line_error=0

//hostname aliases
{halias
 {host1
  addr=news.host1.com
  fullxover=1
  id=1
  linelenience=0,2
 }
 {goodhost
  addr=nntp.goodhost.net
  user=yourname
  pass=hahahahah
  id=2
 }
 {badhost
  addr=hah.bad.host.org
  id=384847
  linelenience=3
 }
}

//multi-server priorities
{hpriority
 {default
  host1=1.9
  goodhost=2.0
  badhost=0.9
 }
 {trustsizes
  goodhost=5.0
  badhost=0.1
 }
 {chocoboprios
  _level=0.94
  _glevel=1.5
  host1=1.8
  badhost=1.2
  goodhost=0.9
 }
}

//newsgroup aliases
{galias
 ayg=alt.your.group
 mygroup=rec.my.group
 {chocobo
  group=alt.chocobo
  prio=chocoboprios
 }
 {wark
  group=alt.chocobo.wark.wark.wark
  prio=chocoboprios
 }
 {idunno
  group=alt.idunno.why.but.this.one.isnt.compressed
  usegz=0
 }
 {less
  group=alt.this.one.is.compressed.less.but.it.should.be.faster
  usegz=3
 }
 {more
  group=alt.slower.but.more.compression
  usegz=9
 }
}

