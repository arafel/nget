clean:
	-rm nget ngetlite *.o
	-$(MAKE) -C uulib clean

distclean: clean
	-rm config.status config.h config.cache config.log Makefile stamp-h .depend *~ .*~ *.rej tags
	-rm -r CVS
	-$(MAKE) -C uulib distclean
#	-cp .depend.dist .depend

distclean-killuu: distclean
	-rm -r uulib
		 

